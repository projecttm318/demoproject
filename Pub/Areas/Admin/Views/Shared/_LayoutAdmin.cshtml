<div id="ModelChangePass" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thây đổi mật khẩu</h4>
            </div>
            <form action="/User/ChangePassword" data-ajax="true"
                  data-ajax-begin="return OnBegin();"
                  data-ajax-method="POST"
                  data-ajax-mode="replace"
                  data-ajax-success="OnSuccess"
                  method="post"
                  data-toggle="validator">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="password" class="form-control" required="" name="oldPass" placeholder="Mật Khẩu Cũ" tabindex="6">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" required="" name="newPass" placeholder="Mật Khẩu Mới" tabindex="6">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" required="" name="confirmPass" placeholder="Xác nhận mật khẩu mới" tabindex="6">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>

    </div>
</div>
<script>
    function OnBegin() {
    }
    function OnSuccess(data) {
        if (data.Code === 1) {
            $('#ModelChangePass').modal('hide');
            showSuccess(data.message);
            window.location = "/Login"
        } else {
            showError(data.message);
        }

    }
</script>