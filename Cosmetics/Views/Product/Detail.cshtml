@model NongSan.Models.Product
@{

    //ViewBag.KeyWord = Model.MetaKeyWord;
    //ViewBag.Description = Model.MetaDescription;
    //var page = ViewBag.PageInfo as NongSan.Models.Setting;
    //ViewBag.Title = Model.ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";
       var lstCate = ViewData["lstCate"] as List<NongSan.Models.Category>;
}
    <div id="breadcrumb">
        <div class="container">
            <h2 class="title">@Model.ProductName</h2>

            <ul class="breadcrumb">
                <li><a href="#" title="Home">Home</a></li>
                <li><span>@Model.ProductName</span></li>
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div id="left-column" class="sidebar col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <!-- Block - Product Categories -->
                <div class="block product-categories">
                    <h3 class="block-title">Categories</h3>

                    <div class="block-content">
                        @foreach (var item in lstCate)
                        {
                            <div class="item">
                                <a class="category-title" href="/@item.Slug-@item.Id">@item.CategoryName</a>
                            </div>
                        }
                    </div>
                </div>


              
         
            </div>

            <!-- Page Content -->
            <div id="center-column" class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="product-detail">
                    <div class="products-block layout-5">
                        <div class="product-item">
                            <div class="product-title">
                                @Model.ProductName
                            </div>

                            <div class="row">
                                <div class="product-left col-md-5 col-sm-5 col-xs-12">
                                    <div class="product-image horizontal">
                                        <div class="main-image">
                                            <img class="img-responsive" src="@Model.Image" alt="Product Image">
                                        </div>
                                        
                                    </div>
                                </div>

                                <div class="product-right col-md-7 col-sm-7 col-xs-12">
                                    <div class="product-info">
                                        <div class="product-price">
                                            <span class="sale-price">@Model.Price.ToString("#,##0")</span>
                                         
                                        </div>

                                    

                                        <div class="product-short-description">
                                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse sapien urna, commodo ut molestie vitae, feugiat tincidunt ligula. Nam gravida nulla in convallis condimentum.
                                        </div>

                                   

                                        <div class="product-add-to-cart border-bottom">
                                            <div class="product-quantity">
                                                <span class="control-label">QTY :</span>
                                                <div class="qty">
                                                    <div class="input-group">
                                                        <input type="text" name="qty" id="qty" value="1" data-min="1">
                                                        <span class="adjust-qty">
                                                            <span class="adjust-btn plus" onclick="var result = document.getElementById('qty'); var qtypro = result.value; if( !isNaN( qtypro )) result.value++;return false;">+</span>
                                                            <span class="adjust-btn minus" onclick="var result = document.getElementById('qty'); var qtypro = result.value; if( !isNaN( qtypro ) && qtypro > 1 ) result.value--;return false;">-</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="product-buttons">
                                                <a class="add-to-cart" data-id="@Model.Id" onclick="addToCart(this)">
                                                    <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                                                    <span>Add To Cart</span>
                                                </a>

                                                <a class="add-wishlist" href="#">
                                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                        </div>

                                   
                                        <div class="product-review border-bottom">
                                            <div class="item">
                                                <div class="product-quantity">
                                                    <span class="control-label">Review :</span>
                                                    <div class="product-rating">
                                                        <div class="star on"></div>
                                                        <div class="star on"></div>
                                                        <div class="star on"></div>
                                                        <div class="star on"></div>
                                                        <div class="star"></div>
                                                    </div>
                                                </div>
                                            </div>

                                          
                                        </div>

                                      
                                    </div>
                                </div>
                            </div>

                            <div class="product-tab">
                                <!-- Tab Navigation -->
                                <div class="tab-nav">
                                    <ul>
                                        <li class="active">
                                            <a data-toggle="tab" href="#description" aria-expanded="true">
                                                <span>Description</span>
                                            </a>
                                        </li>
                                        <li class="">
                                            <a data-toggle="tab" href="#additional-information" aria-expanded="false">
                                                <span>Additional Information</span>
                                            </a>
                                        </li>
                                       
                                    </ul>
                                </div>

                                <!-- Tab Content -->
                                <div class="tab-content">
                                    <!-- Description -->
                                    <div role="tabpanel" class="tab-pane fade active in" id="description">
                                      <p>@Html.Raw(Model.Content)</p>
                                    </div>

                                    <!-- Product Tag -->
                                    <div role="tabpanel" class="tab-pane fade" id="additional-information">
