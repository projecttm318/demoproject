@model List<NongSan.Models.Order>
@{
    ViewBag.Title = "ListOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumb">
    <div class="container">
        <h2 class="title">Orders</h2>

        <ul class="breadcrumb">
            <li><a href="#" title="Home">Home</a></li>
            <li><span>Orders</span></li>
        </ul>
    </div>
</div>
<div class="container">
    <div class="table-responsive">
        <table class="cart-summary table table-bordered">
            <thead>
                <tr>
                    <td colspan="4"><a href="/Customer/LogOut" class="btn btn-primary">LogOut</a> </td>
                </tr>
                <tr>
                    <th>Code</th>
                    <th>CreateDate</th>
                    <th >PhoneNumber</th>
                    <th>Total</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {

                <tr>
                    <td>
                        <span class="product-name">@item.OD_ID</span>
                    </td>
                    <td>
                        <span class="product-name">@item.DateCreate.Value.ToString("dd/MM/yyyy")</span>
                    </td>
                    <td>
                        <span class="product-name">@item.PhoneNumber</span>
                    </td>
                    <td class="text-center">
                        @item.TotalAmount.Value.ToString("#,##0")₫
                    </td>
              
                </tr>
                }



            </tbody>

          
        </table>
    </div>
</div>
